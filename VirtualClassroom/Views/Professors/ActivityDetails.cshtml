@model VirtualClassroom.Models.ProfessorViewModels.ActivityDetailsVM
@{
    ViewData["Title"] = "Activity Details";
}
@if (Model != null)
{
    <h2>@Model.Name Details</h2>

    <div class="row">
        <div class="col-sm-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Presence</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in @Model.Students)
                {
                        <tr>
                            <td class="col-md-3">
                                <a href="/Students/@student.Id">@student.FirstName @student.LastName</a>
                            </td>
                            <td class="col-md-3">@student.ActivityInfo.Presence</td>
                            <td class="col-md-3">@student.ActivityInfo.Grade</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <h1 class="text-center">No Data</h1>
            </div>
        </div>
    </div>
}

